<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" tools:context=".ui.profile.MyDataActivity">

    <include layout="@layout/app_title_bar_with_back_bt"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/your_name"
                android:textColor="@color/colorTextBlack"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/username_et"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/bg_edit_text_border"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:singleLine="true"
                android:textColor="@color/colorTextBlack"
                android:textSize="18sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/my_data_question_1"
                android:textColor="@color/colorTextBlack" android:textSize="20sp" android:textStyle="bold"/>
            <RadioGroup
                android:id="@+id/question1"
                android:layout_width="match_parent" android:layout_height="match_parent" android:padding="6dp">
                <RadioButton
                    android:id="@+id/question1_yes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/my_data_question_1_yes"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="18sp" app:buttonTint="@color/colorMainThemeBlue"/>
                <RadioButton
                    android:id="@+id/question1_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/my_data_question_1_no"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="18sp" app:buttonTint="@color/colorMainThemeBlue"/>
            </RadioGroup>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/my_data_question_2"
                android:textColor="@color/colorTextBlack"
                android:textSize="20sp" android:textStyle="bold"/>

            <Spinner
                android:id="@+id/blood_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_margin="6dp"
                android:background="@drawable/bg_edit_text_border"
                android:popupBackground="@drawable/bg_edit_text_border"
                android:spinnerMode="dropdown"
                tools:listitem="@layout/item_blood_type"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/my_data_question_3"
                android:textColor="@color/colorTextBlack" android:textSize="20sp" android:textStyle="bold"/>
            <RadioGroup
                android:id="@+id/question3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:padding="6dp">
                <RadioButton
                    android:id="@+id/question3_yes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/yes"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="18sp" app:buttonTint="@color/colorMainThemeBlue"/>
                <RadioButton
                    android:id="@+id/question3_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/no"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="18sp" app:buttonTint="@color/colorMainThemeBlue"/>
            </RadioGroup>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>