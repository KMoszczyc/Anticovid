<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.profile.risk_assessment_test.test.RiskAssessmentTestSummaryFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/thank_you_for_completing_test"
        android:textColor="@color/colorTextBlack"
        android:textSize="20sp"
        android:textStyle="bold" />

    <include
        android:id="@+id/low_risk"
        layout="@layout/risk_assessment_test_summary_low_risk"
        android:visibility="gone" />

    <include
        android:id="@+id/medium_risk"
        layout="@layout/risk_assessment_test_summary_medium_risk"
        android:visibility="gone" />

    <include
        android:id="@+id/high_risk"
        layout="@layout/risk_assessment_test_summary_high_risk"
        android:visibility="gone" />
</LinearLayout>